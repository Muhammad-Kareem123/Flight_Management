<Page x:Class="Flight_Management2.Available_Flights"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Flight_Management2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Available_Flights" Background="#123">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="AntiqueWhite">Available Flights</TextBlock>
        <DataGrid Grid.Row="1" Name="dg"></DataGrid>
        <Button Grid.Row="2" Margin="260,28,260,28" Background="Blue" Foreground="AntiqueWhite" Name="NV" Click="NV_Click">Navigate</Button>
    </Grid>
</Page>
